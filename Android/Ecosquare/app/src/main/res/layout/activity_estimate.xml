<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp" tools:context=".LoginActivity"
    android:background="@drawable/background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="4.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type of waste"
            android:id="@+id/textView2"
            android:textSize="22dp"
            android:textColor="#000" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal">
        <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:visibility="gone" />
        <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">

                    <!--RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/paper_radio"
                            android:paddingRight="35dip"
                            android:text="Paper"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/plastic_radio"
                            android:paddingRight="35dip"
                            android:text="Plastic"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Glass"
                            android:text="Glass"
                            />

                    </RadioGroup>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/metals"
                            android:paddingRight="32dip"
                            android:text="Metals"
                            />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/others"
                            android:paddingRight="30dip"
                            android:text="Others"
                            />


                    </RadioGroup-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                        <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:id="@+id/box_paper"
                            android:textSize="18sp"
                        android:paddingRight="32dip"
                        android:text="Paper"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/box_plastic"
                            android:layout_toRightOf="@+id/box_paper"
                            android:layout_gravity="top"
                            android:textSize="18sp"
                            android:paddingRight="20dip"
                            android:text="Plastic"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/box_glass"
                            android:textSize="18sp"
                            android:layout_toRightOf="@+id/box_plastic"
                            android:paddingRight="30dip"
                            android:text="Glass"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/box_metals"
                            android:textSize="18sp"
                            android:layout_below="@+id/box_paper"
                            android:paddingRight="26dip"
                            android:text="Metals"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:id="@+id/box_metal"
                            android:layout_below="@+id/box_paper"
                            android:layout_toRightOf="@+id/box_metals"
                            android:paddingRight="32dip"
                            android:text="Glass"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Approx. weight of waste(in Kgs.)"
                        android:id="@+id/textView4"
                        android:textSize="22dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000" />
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/paper_radio"
                            android:textSize="18sp"
                            android:paddingRight="35dip"
                            android:text="2 Kg"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/plastic_radio"
                            android:paddingRight="35dip"
                            android:textSize="18sp"
                            android:text="5 Kg"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:id="@+id/Glass"
                            android:text="10 Kg"
                            />

                    </RadioGroup>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/custom_wt"
                        android:text="Others"
                        />

                    <Button android:id="@+id/bookBtn" style="?android:textAppearanceSmall"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="160dp" android:text="Book A Pickup"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:onClick="clicked"
                        android:background="#DD92d050" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>
