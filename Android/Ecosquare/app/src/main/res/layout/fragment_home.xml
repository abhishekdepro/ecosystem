<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/grass"
            android:orientation="horizontal">
            <com.pkmmte.view.CircularImageView
                android:id="@+id/photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/profile"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="2dp"
                app:shadow="true" />
            <LinearLayout android:id="@+id/x1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="top|right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hello"
                    android:text=" Hello, "
                    android:textColor="@color/status_bar"
                    android:textSize="15sp"
                    android:background="#AAffffff"/>

                <TextView
                    android:id="@+id/NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=" Abhishek "
                    android:textColor="@color/status_bar"
                    android:textSize="22sp"
                    android:background="#AAffffff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/md_white_1000"
            android:orientation="horizontal">
            <LinearLayout android:id="@+id/details"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phoneShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="(+91) 8981169454"
                    android:textSize="18sp"
                    android:backgroundTint="#a7a7a7"
                    />
                <EditText
                    android:id="@+id/nameShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abhishek Dey"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:backgroundTint="#a7a7a7"
                    />
                <EditText
                    android:id="@+id/emailShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="abhishekde@hotmail.com"
                    android:textSize="18sp"
                    android:backgroundTint="#a7a7a7"
                    />
                <EditText
                    android:id="@+id/coinsShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="250 points"
                    android:textSize="18sp"
                    android:backgroundTint="#a7a7a7"
                    />



            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/edit"
        app:backgroundTint="#2A2A2A"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end"
        android:onClick="updateUser"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/logout"
        app:backgroundTint="#2A2A2A"
        android:layout_gravity="bottom|end"
        app:layout_anchorGravity="right|end"
        android:onClick="logout"/>

</android.support.design.widget.CoordinatorLayout>